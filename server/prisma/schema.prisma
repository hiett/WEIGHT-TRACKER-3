generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model Profile {
    id               String    @id
    email            String    @unique
    name             String
    createdAt        DateTime  @default(now())
    updatedAt        DateTime  @updatedAt
    supabaseId       String
    gender           String?
    dob              DateTime?
    defaultUnit      String
    height           Float?
    heightUnit       String?
    targetWeight     Float?
    targetWeightUnit String?
    activityLevel    String?
    calorieSurplus   Int?
    weights          Weight[]
}

model Weight {
    id         String   @id
    createdAt  DateTime @default(now())
    updatedAt  DateTime @updatedAt
    weight     Float
    weightUnit String
    profileId  String
    supabaseId String
    profile    Profile  @relation(fields: [profileId], references: [id])
}
